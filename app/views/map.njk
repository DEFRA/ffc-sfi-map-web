{% extends './_layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block beforeContent %}
  
    <link href="/static/css/map.ca3342e18a9bcf562ae9.css" rel="stylesheet">
  
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: "/"
      },
      {
        text: "Search",
        href: "/search"
      }
    ]
  }) }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <span class="govuk-caption-l">Single Business Identifier: {{ sbi }}</span>
      Your land parcels
    </h1>
    <div class="govuk-form-group">
      <label class="govuk-label" for="sort">
        Toogle view
      </label>
      <select class="govuk-select" id="layer-select" name="layer-select">
        <option value="Aerial">Aerial</option>
        <option value="AerialWithLabelsOnDemand" selected>Aerial with labels</option>
        <option value="RoadOnDemand">Road</option>
        <option value="CanvasDark">Road dark</option>
        <option value="OrdnanceSurvey">Ordnance Survey</option>
      </select>
    </div>
    <div id="map" class="map"></div>
  </div>
</div>

  <script src="/static/js/map.ca3342e18a9bcf562ae9.js"></script>

<script>
  const parcels = {{ parcels | dump | safe }}
  const center = {{ center | dump | safe }}

  const layers = []

  const mapStyles = [
    'RoadOnDemand',
    'Aerial',
    'AerialWithLabelsOnDemand',
    'CanvasDark',
    'OrdnanceSurvey']

  map.displayMap(parcels, center, layers, mapStyles)

  var select = document.getElementById('layer-select')

  function onChange () {
    console.log(layers)
  var style = select.value
  for (var i = 0, ii = layers.length-1; i < ii; ++i) {
    layers[i].setVisible(mapStyles[i] === style)
  }
}
select.addEventListener('change', onChange)
onChange()
</script>
{% endblock %}
